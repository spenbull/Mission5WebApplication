@{
    ViewData["Title"] = "Photography Tutoring Calculator";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Link to your CSS file -->
</head>
<body>
    
    <main>
        <h1>Photography Tutoring Cost Calculator</h1>
        <p class="intro">Enter the number of hours you need tutoring, and I'll calculate the total cost for you.</p>
        
        <div class="calculator-form">
            <label for="hours">Hours:</label>
            <input type="number" id="hours" min="1">
            <label for="rate">Rate per Hour:</label>
            <input type="text" id="rate" value="$30" readonly>
            <button id="calculate">Calculate</button>
            <p>Total Cost: <span id="total"></span></p>
        </div>
    </main>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#calculate").click(function() {
                var hours = parseFloat($("#hours").val());
                if (isNaN(hours) || hours <= 0) {
                    alert("Please enter a valid positive number of hours.");
                    return;
                }
                var rate = 30;
                var total = hours * rate;
                $("#total").text("$" + total.toFixed(2));
            });
        });
    </script>
</body>
</html>
