<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Film</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<!-- Navigation Bar -->
<header>
    <nav>
        <!-- LEFT SIDE: Logo + Title -->
        <div class="nav-left">
            <div class="logo">
                <img src="~/images/FilmLogo.jpeg" alt="Logo">
            </div>
            <span class="nav-title">Spencer's Hobby</span>
        </div>

        <!-- RIGHT SIDE: Navigation Links -->
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/Calculator">Calculator</a></li>
        </ul>
    </nav>
</header>


<!-- Main Content -->
<main role="main">
    @RenderBody()
</main>

<!-- Footer -->
<footer>
    <p>&copy; 2025 Spencer Bullock - Film Enthusiast</p>
</footer>
</body>
</html>



